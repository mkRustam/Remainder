<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/ScreenBg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.projects.ui_components.common.NavbarView
        android:id="@+id/navbar"
        style="@style/MatchWidth" />

    <View style="@style/Separator" />

    <ScrollView style="@style/ScrollView">

        <LinearLayout
            style="@style/MatchWidth"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <com.projects.ui_components.fields.FieldInputText
                android:id="@+id/field_task_title"
                style="@style/MatchWidth" />

            <com.projects.ui_components.fields.FieldInputDate
                android:id="@+id/field_task_date"
                style="@style/MatchWidth" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button"
                style="@style/Button"
                android:text="@string/button_add" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>